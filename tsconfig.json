{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "@app": ["app.ts"],
            "@config": ["config.ts"],
            "@database/*": ["database/*"],
            "@repository/*": ["database/repository/*"],
            "@core/*": ["core/*"],
            "@jwt": ["core/jwt/JWT.ts"],
            "@logger": ["core/logger.ts"],
            "@routes": ["routes/index.ts"],
            "@security/*": ["security/*"],
            "@authentication/*": ["security/authentication/*"],
            "@authorization/*": ["security/authorization/*"],
            "@authUtils": ["security/authUtils/index.ts"],
            "@utils/*": ["utils/*"],
            "app-request": ["types/app-request.d.ts"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "build", "dist",".vscode"]
}