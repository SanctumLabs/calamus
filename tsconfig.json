{
    "compilerOptions": {
        "module": "commonjs",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "@app": ["app.ts"],
            "@config": ["config.ts"],
            "@database/*": ["database/*"],
            "@repository/*": ["database/repository/*"],
            "@core/*": ["core/*"],
            "@jwt": ["core/JWT.ts"],
            "@logger": ["core/logger.ts"],
            "@routes/*": ["routes/*"],
            "@routesv1/*": ["routes/v1/*"],
            "@security/*": ["security/*"],
            "@utils/*": ["utils/*"],
            "app-request": ["types/app-request.d.ts"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "build", "dist"]
}