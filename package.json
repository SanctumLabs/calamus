{
  "name": "@wyvarn/calamus",
  "private": false,
  "description": "express blog api",
  "main": "server.js",
  "version": "1.17.0",
  "repository": "git@github.com:Wyvarn/calamus.git",
  "author": "BrianLusina <12752833+BrianLusina@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=development npm-run-all --parallel watch:build watch:server",
    "serve": "node -r dotenv/config --inspect=5858 build/server.js",
    "build": "npm run clean && webpack --optimize-minimize",
    "clean": "rm -rf build",
    "watch:server": "nodemon",
    "watch:build": "webpack --watch",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint --fix src/ --ext .ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test": "jest --runInBand --forceExit --verbose",
    "test:api-doc": "dredd apiary.apib http://localhost:3000",
    "snyk-protect": "snyk protect",
    "prepare": "yarn run snyk-protect"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^4.0.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.9",
    "winston": "^3.2.1",
    "snyk": "^1.319.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
